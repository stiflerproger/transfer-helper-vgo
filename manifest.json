{
	"manifest_version" : 2,
	"name" : "TRANSFER HELPER (VGO Edition)",
	"short_name" : "TRANSFER HELPER",
	"version" : "0.1",
	"author" : "Roman Leoniyev",
	"description" : "This extension will help you in finding profitable transfers",

	"icons" : {
		"16" : "icons/logo.png",
		"32" : "icons/logo.png",
		"48" : "icons/logo.png",
		"64" : "icons/logo.png",
		"128" : "icons/logo.png"
	},

	"permissions": [
		"*://*/*",
		"tabs",
		"storage"
	],
	"content_scripts" : [
		{
			"matches": ["*://*/*"],
			"js": ["js/jQuery.js", "js/tinysort.min.js", "content.js"],
			"css": [ "css/style.css" ],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": ["js/jQuery.js", "js/async.js", "js/background.js"]
	},
	"web_accessible_resources": [
		"/js/*",
		"/css/*",
		"/icons/*"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "browser_action": {
        "default_title": "TRANSFER HELPER",
        "default_icon": "icons/logo.png",
		"default_popup": "popup.html"
    }
}


